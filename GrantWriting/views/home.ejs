<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Grant Writing Support Tool</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f0f4f8;
        }
        .hero-section {
            background-color: #e3f2fd;
            padding: 50px 20px;
            text-align: center;
        }
        .hero-section h1 {
            font-size: 2.5rem;
            font-weight: bold;
            color: #01579b;
        }
        .hero-section p {
            font-size: 1.2rem;
            color: #37474f;
        }
        .navbar {
            background-color: #0288d1;
        }
        .navbar-brand{
            font-size: 5.0rem;
            font-style: italic;
            font-weight: bolder;
            color: #ffffff;
        }
        .nav-link {
            color: #ffffff !important;
        }
        .nav-link.active {
            background-color: #0277bd;
        }
        .card {
            border: none;
            margin-bottom: 1rem;
        }
        .card-body {
            padding: 2rem;
        }
        .card-title {
            font-size: 1.5rem;
            font-weight: bold;
            color: #01579b;
        }
        .btn-primary {
            background-color: #0288d1;
            border-color: #0288d1;
        }
        .btn-primary:hover {
            background-color: #0277bd;
            border-color: #0277bd;
        }
    </style>
</head>
<body>
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
            <a class="navbar-brand" href="/">Grant Support</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav flex-column ms-auto">
                    <li class="nav-item">
                        <a class="nav-link active" href="/home">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/draftEditor">Draft Editor</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/resources">Resources</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/organizationProfile">Organization Profile</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <section class="hero-section">
        <h1>Welcome to the Grant Writing Support Tool</h1>
        <p>Your one-stop solution for writing impactful grant proposals and creating detailed organization profiles.</p>
        <button class="btn btn-primary mt-3" onclick="scrollToFeature()">Get Started</button>
    </section>

    <!-- Placeholder Sections -->
    <div class="container mt-5">
        <div class="row justify-content-center">
            <!-- Draft Editor Card -->
            <div class="col-md-6 mb-4">
                <div class="card h-100 text-center">
                    <div class="card-body">
                        <form action="/draftEditor" method="get">
                            <h5 class="card-title">Draft Editor</h5>
                            <p class="card-text">Start drafting your grant proposals here.</p>
                            <button type="submit" class="btn btn-primary">Go to Draft Editor</button>
                        </form>
                    </div>
                </div>
            </div>
    
            <!-- Resources Card -->
            <div class="col-md-6 mb-4">
                <div class="card h-100 text-center">
                    <div class="card-body">
                        <h5 class="card-title">Resources</h5>
                        <p class="card-text">Access guides, tips, and resources for better grant writing.</p>
                        <a href="/resources" class="btn btn-primary">Explore Resources</a>
                    </div>
                </div>
            </div>
    
            <!-- Organization Profile Card -->
            <div class="col-md-6 mb-4">
                <div class="card h-100 text-center">
                    <div class="card-body">
                        <h5 class="card-title">Organization Profile</h5>
                        <p class="card-text">Build and manage detailed profiles for your organization.</p>
                        <a href="/organizationProfile" class="btn btn-primary">View Profiles</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script>
        function scrollToFeature() {
            document.getElementById("draftEditor").scrollIntoView({ behavior: "smooth" });
        }
    </script>
</body>
</html>
